<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientwallpaper"
    tools:context=".PuneActivity">

    <Button
        android:id="@+id/thegreenhouse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#6BEF598C"
        android:fontFamily="serif"
        android:onClick="thegreenhouse"
        android:padding="10dp"
        android:text="The Green House"
        android:textSize="30dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/deccanspice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The Deccan Spice Restaurant"
        android:backgroundTint="#6BE10F56"
        android:textStyle="bold"
        android:layout_below="@id/thegreenhouse"
        android:textSize="30dp"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:onClick="deccanspice"
        android:fontFamily="serif"/>

    <Button
        android:id="@+id/thepunebrasserie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/deccanspice"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_marginTop="182dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#6BEF598C"
        android:fontFamily="serif"
        android:padding="10dp"
        android:text="The Pune Brasserie"
        android:onClick="brasserie"
        android:textSize="30dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/logoutbtn"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/thepunebrasserie"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="97dp"
        android:layout_marginTop="501dp"
        android:backgroundTint="#90EA3902"
        android:onClick="logout"
        android:text="LOGOUT"
        android:textSize="30dp"
        android:textStyle="bold" />


</RelativeLayout>
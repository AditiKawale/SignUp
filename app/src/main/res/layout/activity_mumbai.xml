<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientwallpaper"
    tools:context=".MumbaiActivity">

    <Button
        android:id="@+id/yauatcha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#6BEF598C"
        android:fontFamily="serif"
        android:onClick="yauatcha"
        android:padding="10dp"
        android:text="Yauatcha Mumbai"
        android:textSize="30dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/sevenkitchens"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seven Kitchens"
        android:backgroundTint="#6BE10F56"
        android:textStyle="bold"
        android:layout_below="@id/yauatcha"
        android:textSize="30dp"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:onClick="sevenkitchens"
        android:fontFamily="serif"/>

    <Button
        android:id="@+id/dumpukht"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sevenkitchens"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_marginTop="182dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#6BEF598C"
        android:fontFamily="serif"
        android:padding="10dp"
        android:text="Dum Pukht"
        android:textSize="30dp"
        android:onClick="dumpukht"
        android:textStyle="bold" />

    <Button
        android:id="@+id/logoutbtn"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/dumpukht"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="92dp"
        android:layout_marginTop="501dp"
        android:backgroundTint="#90EA3902"
        android:onClick="logout"
        android:text="LOGOUT"
        android:textSize="30dp"
        android:textStyle="bold" />


</RelativeLayout>